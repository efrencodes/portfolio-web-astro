---
import Navbar from "@components/Navbar/index.astro";
import HeadlinePost from "@components/Post/Headline/index.astro";
import Pagination from "@components/Post/Pagination/index.astro";
interface Props {
  title: string;
  description: string;
  date: string;
  tags: string[];
  authors: string[];
  ogImage: string;
  cover: string;
  keywords: string;
  slug: string;
  urlNext?: string;
  urlPrevious?: string;
  titleNext?: string;
  titlePrevious?: string;
}

const {
  title,
  description,
  cover,
  slug,
  keywords,
  ogImage,
  urlNext,
  urlPrevious,
  titleNext,
  titlePrevious,
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <script
      type="application/ld+json"
      dangerouslySetInnerHTML={{
        __html: JSON.stringify({
          url: `https://efrencodes.com/articulos/${slug}`,
          title: title,
          description: description,
          keywords: keywords,
          openGraph: {
            url: `https://efrencodes.com`,
            siteName: "Efrén Martínez ✦ @efrencodes",
            images: {
              url: ogImage,
              width: 1920,
              height: 1080,
            },
            locale: "es-MX",
            type: "summary_large_image",
            creator: "@efrencodes",
          },
        }),
      }}></script>
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="canonical" href={`https://efrencodes.com/articulos/${slug}`} />
    <link
      type="text/plain"
      rel="author"
      href="https://efrencodes.com/humans.txt"
    />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="google" content="notranslate" />
    <meta name="msapplication-TileColor" content="#d4d4d8" />
    <meta name="robots" content="index, follow" />
    <meta
      name="apple-mobile-web-app-title"
      content={`https://efrencodes.com/articulos/${slug}`}
    />
    <meta
      name="application-name"
      content={`https://efrencodes.com/articulos/${slug}`}
    />
    <meta name="theme-color" content="#d4d4d8" />
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content={"https://efrencodes.com"} />
    {/* Open Graph / Facebook */}
    <meta property="og:type" content={"summary_large_image"} />
    <meta
      property="og:url"
      content={`https://efrencodes.com/articulos/${slug}`}
    />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={cover} />
    <meta
      property="og:image:alt"
      content={`https://efrencodes.com/articulos/${slug}`}
    />
    <meta property="og:image:width" content={"1920"} />
    <meta property="og:image:height" content={"1080"} />
    <meta property="og:locale" content={"es-MX"} />
    <meta
      property="og:site_name"
      content={`https://efrencodes.com/articulos/${slug}`}
    />
    {/* Twitter */}
    <meta property="twitter:card" content={"summary_large_image"} />
    <meta
      property="twitter:url"
      content={`https://efrencodes.com/articulos/${slug}`}
    />
    <meta
      property="twitter:title"
      content={`https://efrencodes.com/articulos/${slug}`}
    />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={cover} />
    <meta property="twitter:creator" content={"@efrencodes"} />
    <meta
      property="twitter:site"
      content={`https://efrencodes.com/articulos/${slug}`}
    />
    <meta property="twitter:image:alt" content={title} />
  </head>
  <body class="leading-loose antialiased overflow-x-hidden">
    <Navbar>
      <a
        slot="navbar-action-primary"
        class="text-neutral-900 text-sm font-semibold font-sans inline-flex items-center gap-2"
        href="/"
        ><svg
          class="w-2.5 h-2.5 transition ease-in-out group-hover:translate-x-1 rotate-180"
          width="16"
          height="16"
          viewBox="0 0 16 16"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            fill-rule="evenodd"
            clip-rule="evenodd"
            d="M0.975821 6.92249C0.43689 6.92249 -3.50468e-07 7.34222 -3.27835e-07 7.85999C-3.05203e-07 8.37775 0.43689 8.79749 0.975821 8.79749L12.7694 8.79748L7.60447 13.7596C7.22339 14.1257 7.22339 14.7193 7.60447 15.0854C7.98555 15.4515 8.60341 15.4515 8.98449 15.0854L15.6427 8.68862C16.1191 8.23098 16.1191 7.48899 15.6427 7.03134L8.98449 0.634573C8.60341 0.268455 7.98555 0.268456 7.60447 0.634573C7.22339 1.00069 7.22339 1.59428 7.60447 1.9604L12.7694 6.92248L0.975821 6.92249Z"
            fill="currentColor"></path>
        </svg>IR A ATRÁS</a
      >
    </Navbar>
    <main class="mx-auto max-w-screen-md px-4 py-8 sm:px-6 sm:py-12 lg:px-8">
      <HeadlinePost title={title} description={description} cover={cover} />
      <slot />
      <Pagination
        urlNext={urlNext}
        urlPrevious={urlPrevious}
        titleNext={titleNext}
        titlePrevious={titlePrevious}
      />
    </main>
  </body>
</html>
